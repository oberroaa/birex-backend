// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuario
model User {
  id                String        @id @default(uuid())
  email             String        @unique
  password          String
  fullName          String
  mobile            String?
  dateOfBirth       DateTime?
  nationality       String?
  walletAddress     String?
  emailVerified     Boolean       @default(false)
  kycStatus         KycStatus     @default(NOT_SUBMITTED)
  twoFactorEnabled  Boolean       @default(false)
  referralCode      String        @unique
  referredBy        String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relaciones
  tokens            Token[]
  transactions      Transaction[]
  contributions     Contribution[]
}

// Estado KYC
enum KycStatus {
  NOT_SUBMITTED
  PENDING
  APPROVED
  REJECTED
}

// Tokens del usuario
model Token {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  
  // Balance
  purchasedTokens   Float     @default(0)
  referralTokens    Float     @default(0)
  bonusTokens       Float     @default(0)
  totalTokens       Float     @default(0)
  
  // Contribución
  totalContributed  Float     @default(0) // en USDT
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  @@unique([userId])
}

// Rondas de venta
model Round {
  id                String        @id @default(uuid())
  roundNumber       Int           @unique
  status            RoundStatus   @default(UPCOMING)
  tokenPrice        Float         // Precio en USDT
  bonusPercentage   Int           @default(0)
  startDate         DateTime
  endDate           DateTime
  minContribution   Float         @default(100)
  totalTokens       Float
  soldTokens        Float         @default(0)
  raisedAmount      Float         @default(0)
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  
  // Relaciones
  transactions      Transaction[]
}

enum RoundStatus {
  UPCOMING
  RUNNING
  ENDED
}

// Transacciones
model Transaction {
  id                String            @id @default(uuid())
  tranxNo           String            @unique
  userId            String
  user              User              @relation(fields: [userId], references: [id])
  roundId           String?
  round             Round?            @relation(fields: [roundId], references: [id])
  
  // Detalles de la transacción
  tokens            Float
  amount            Float             // Cantidad en moneda original
  usdtAmount        Float             // Equivalente en USDT
  currency          String            @default("USDT")
  type              TransactionType
  status            TransactionStatus @default(PENDING)
  
  // Información adicional
  walletTo          String?
  paymentMethod     String?
  txHash            String?           // Hash de transacción blockchain
  
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

enum TransactionType {
  PURCHASE
  BONUS
  REFERRAL
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
  FAILED
}

// Contribuciones del usuario
model Contribution {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  
  amount            Float     // en USDT
  currency          String    @default("USDT")
  
  createdAt         DateTime  @default(now())
}

// Configuración global del proyecto
model ProjectConfig {
  id                String    @id @default(uuid())
  
  // Venta de tokens
  totalTokenSupply  Float
  totalTokensSold   Float     @default(0)
  totalRaised       Float     @default(0)
  
  // Configuración actual
  currentRound      Int
  isActive          Boolean   @default(true)
  
  updatedAt         DateTime  @updatedAt
}